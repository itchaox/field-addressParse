{
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "dom", "es2015", "es2016", "es2017"],
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
